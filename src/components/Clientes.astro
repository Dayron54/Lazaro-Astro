---
import ClientesCarousel from "./ClientesCarousel.jsx";
---

<section class="clientes">
  <h2 class="titulo">Nuestros clientes</h2>
  <ClientesCarousel client:only="react" />
</section>

<style>
.clientes {
  text-align: center;
  padding: 2rem 1rem;
}

.titulo {
  font-size: 1.6rem;
  font-weight: bold;
  color: #004c97;
}

/* ðŸ”¹ contenedor del swiper */
:global(.swiper) {
  max-width: 1000px;   /* ancho controlado del carrusel */
  margin: 0 auto;
  position: relative;
  padding: 0 40px;   /* espacio interno para que las flechas entren */
  box-sizing: border-box;
}

/* ðŸ”¹ responsive */
@media (max-width: 768px) {
  :global(.swiper) {
    max-width: 320px;
    padding: 0 30px;
  }
  .logo-box img {
    max-height: 80px;
  }
}


</style>
