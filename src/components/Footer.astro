---
const year = new Date().getFullYear();
---

<footer class="footer" aria-labelledby="footer-title">
  <div class="footer-inner">
    <!-- columna izquierda: enlaces -->
    <nav class="footer-nav" aria-label="Enlaces del sitio">
      <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="#modulos">Módulos</a></li>
        <li><a href="#clientes">Clientes</a></li>
        <li><a href="/nosotros">Nosotros</a></li>
        <li><a href="/politicas">Políticas de privacidad</a></li>
      </ul>
    </nav>

    <!-- Logo -->
    <div class="footer-brand">
      <img src="/logo-lazaro.png" alt="Lázaro Software" />
      <p class="copy">© {year} Lázaro Software</p>
    </div>

    <!-- derecha: datos + wompi + redes -->
    <div class="footer-info">
      <p class="phone">+57 000 0000000</p>
      <p class="address">Cra. 4D #38-65 barrio magisterio, Ibagué, Tolima</p>

      <!-- Botón Wompi -->
      <a class="wompi-btn" href="https://www.wompi.co/" target="_blank" rel="noopener">
        Paga con <span>Wompi</span>
      </a>

      <!-- redes -->
      <div class="social">
        <a href="https://www.facebook.com/p/Lazaro-Software-100063740972972/?locale=es_LA" target="_blank" rel="noopener" aria-label="Facebook">
          <img src="/logo-facebook.png" alt="facebook" />
        </a>
        <a href="https://www.instagram.com/lazarosoftware_/?hl=es" target="_blank" rel="noopener" aria-label="Instagram">
          <img src="/logo-instagram.png" alt="instagram" />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>

.footer {
  position: relative;
  margin-top: -64px;

  /* Fondo con degradé + halo radial sutil */
  background:
    radial-gradient(1200px 320px at 30% 0%, rgba(255,255,255,0.06) 0%, rgba(255,255,255,0) 60%),
    linear-gradient(135deg, #062e57 0%, #053056 60%, #0a3e6f 100%);
  color: #ffffff;

  padding: 48px 20px;
  z-index: 0; /* queda por detrás de la imagen del contacto (que tiene z-index mayor) */
}

.footer-inner {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  gap: 32px;
  align-items: center;
}

/* enlaces (izquierda) */
.footer-nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
}
.footer-nav a {
  display: block;
  padding: 8px 0;
  text-decoration: none;
  color: #ffffff;
  opacity: 0.95;
}
.footer-nav a:hover {
  opacity: 1;
  text-decoration: underline;
}

/* logo */
.footer-brand {
  text-align: center;
}
.footer-brand img {
  display: block;
  max-width: 240px;
  width: 100%;
  margin: 0 auto 6px;
}
.footer-brand .copy {
  margin: 0;
  font-size: 0.9rem;
  opacity: 0.85;
}

/* info + wompi + redes */
.footer-info {
  text-align: right;
}
.footer-info .phone,
.footer-info .address {
  margin: 0 0 8px 0;
  font-weight: 600;
}

.wompi-btn {
  font-size: 18px;
  display: inline-block;
  margin: 10px 0 16px;
  padding: 10px 16px;
  border-radius: 999px;
  background: linear-gradient(90deg, #29a9ff, #32d1f7);
  color: #003a5a;
  font-weight: 700;
  text-decoration: none;
  box-shadow: 0 6px 14px rgba(0,0,0,0.2);
}
.wompi-btn span {
  font-size: 22px;
  border-radius: 8px;
  padding: 2px 6px;
  color: #ffffff;
  margin-left: -8px;
}

/* redes */
.social {
  display: flex;
  gap: 14px;
  justify-content: flex-end;
}
.social a {
  width: 50px;
  height: 50px;
  border-radius: 999px;
  background: rgba(255,255,255,0.12);
  display: grid;
  place-items: center;
  transition: background .2s ease, transform .2s ease;
}
.social a:hover {
  background: rgba(255,255,255,0.2);
  transform: translateY(-2px);
}
.social img {
  width: 35px;
  height: 35px;
}

/* Responsive */
@media (max-width: 900px) {
  .footer {
    margin-top: -40px;   /* solapa un poco menos en pantallas pequeñas */
    padding: 36px 16px;
  }
  .footer-inner {
    grid-template-columns: 1fr;
    text-align: center;
  }
  .footer-info {
    text-align: center;
  }
  .social {
    justify-content: center;
  }
}
</style>
